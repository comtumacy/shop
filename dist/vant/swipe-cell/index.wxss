@import '../common/index.wxss';

.van-swipe-cell {
  position: relative;
  overflow: hidden;
}

.van-swipe-cell__left, .van-swipe-cell__right {
  position: absolute;
  top: 0;
  height: 100%;
}

.van-swipe-cell__left {
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  width: 18%;
  -webkit-transform: translate3d(-100%, 0, 0);
  transform: translate3d(-100%, 0, 0);
}

.van-swipe-cell__right {
  display: flex;
  justify-content: center;
  align-items: center;
  right: 0;
  width: 18%;
  -webkit-transform: translate3d(100%, 0, 0);
  transform: translate3d(100%, 0, 0);
}
