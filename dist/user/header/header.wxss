@import "../../../font/vip.wxss";

.headerIndex {
  position: relative;
  width: 100%;
  height: 480rpx;
  background: url("https://yitongli.cn/shopImage/my/my.jpg");
}

.headerIconIndex {
  margin: 0 4%;
  position: relative;
  top: 60rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
}

.headerIconLeft {
  flex: 0;
}

.headerIconLeft, .headerIconLeft image {
  margin-left: 10rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.headerIconRight {
  position: relative;
  left: 40rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: flex-start;
}

.headerIconRightBottom {
  position: relative;
  display: flex;
  top: 8rpx;
  flex-flow: row nowrap;
}

.headerIconRightTop {
  max-width: 360rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
}

.headerIconRightBottomIcon {
  color: #e6cb95;
  line-height: 44rpx;
}

.headerIconRightBottomText {
  position: relative;
  top: 8rpx;
  left: 10rpx;
  padding: 0 16rpx;
  font-size: 20rpx;
  background-color: #e6cb95;
  height: 28rpx;
  border-radius: 40rpx;
  color: #fff;
  transform: scaleY(1.1);
}

.headerState {
  top: 120rpx;
  margin: 0 4%;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.headerStateLeft, .headerStateMiddle, .headerStateRight {
  position: relative;
  display: flex;
  width: 200rpx;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600
}

.headerStateLeftTop, .headerStateMiddleTop, .headerStateRightTop {
  position: relative;
  bottom: 8rpx
}