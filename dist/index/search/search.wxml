<!-- 主界面头像、搜索组件 -->
<view class="searchIndex">
  <image class="searchIcon" src="{{url}}" mode="scaleToFill" bind:tap="clickImg"></image>
  <view class="first">
    <view class="select">
      <text class="address">{{city}}</text>
      <i-icon class="down" type="unfold" size="14" color="#80848f" i-class="i-iconLog" />
    </view>
    <text class="addressLess">{{addressLess}}</text>
  </view>
  <view class="search1Left" bindtap="enterSearchPage">
    <view class="search1icon iconfont icon-sousuo"></view>
    <view class="search1LeftText">{{text}}</view>
  </view>
<view class="third">
  <i-icon class="i-iconClass" type="remind_fill" i-class="i-iconLog2" size="24" />
  <i-badge dot i-class="i-badgeLog">
    <view class="demo-badge"></view>
  </i-badge>
</view>
</view>