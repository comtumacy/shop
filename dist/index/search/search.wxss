@import "../../../font/searchAndLove.wxss";
.searchIndex {
  margin: 20rpx 0;
  display: flex;
  flex-flow: row nowrap;
}

.searchIndex .searchIcon {
  flex: 0 0 auto;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50rpx;
}

.searchIndex .first {
  flex: 0 0 auto;
  margin-left: 20rpx;
  font-family: PingFangNew;
  font-size: 30rpx;
}

.searchIndex .addressLess {
  position: absolute;
  width: 100rpx;
  font-size: 20rpx;
  font-family: PingFangNew;
  color: #bbbec4;
}

.searchIndex .searchIcon .first .select i-icon .i-iconLog {
  position: relative;
  left: 6rpx
}

.searchIndex .second {
  align-self: flex-start
}

.search1Left {
  margin-left: 40rpx;
  margin-right: 12rpx;
  display: flex;
  padding: 10rpx 0;
  justify-content: center;
  align-items: center;
  flex: 1;
  background-color: #f8f8f9;
  border-radius: 80rpx;
}

.search1icon {
  position: relative;
  right: 10rpx;
  font-size: 24rpx;
  color: #bbbec4;
  line-height: 36rpx
}

.search1LeftText {
  font-size: 28rpx;
  color: #bbbec4;
}

.searchIndex .third i-badge .i-badgeLog {
  margin-bottom: 20rpx
}

.third {
  align-self: center;
}