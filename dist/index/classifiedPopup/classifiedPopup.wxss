@import "../../../font/allow.wxss";

.classifiedPopupIndex {
  margin: 0 4%;
}

.classifiedPopupTitle {
  position: relative;
  display: flex;
  margin: 20rpx 0;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.contentFlex {
  position: relative;
  display: flex;
  height: 264rpx;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
}

.content {
  padding: 18rpx;
  margin: 0 20rpx 20rpx 0;
  background-color: #f4f4f4;
  border-radius: 10rpx;
  font-size: 24rpx;
}

.classifiedPopupTitle2 {
  display: flex;
  flex-flow: row nowrap;
}

.classifiedPopupTitle1, .classifiedPopupTitle2 {
  font-size: 28rpx;
  color: #929394;
  transform: scaleY(1.05);
}

.classifiedIcon {
  margin-left: 10rpx;
  font-size: 26rpx;
  line-height: 40rpx;
}
