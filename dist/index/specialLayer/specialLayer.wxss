.specialIndex {
  position: relative;
  margin-top: 20rpx
}

.specialIndex .specialHeader {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.specialIndex .specialHeader .more {
  color: rgb(128, 132, 143);
}

.specialContent .specialContentTwo {
  position: relative;
  margin-top: 10rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.specialContent .specialContentTwo .specialContentTwoFlex {
  display: flex;
  padding: 20rpx;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f9;
  border-radius: 20rpx
}

.specialContent .specialContentTwo .specialContentTwoFlex .left {
  position: relative;
  display: flex;
  margin-right: 20rpx;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: flex-start;
}

.specialContent .specialContentTwo .specialContentTwoFlex .left .leftTop {
  position: relative;
  margin-bottom: 10rpx;
  font-size: 30rpx;
}

.specialContent .specialContentTwo .specialContentTwoFlex .left .leftBottom {
  padding: 6rpx 16rpx;
  font-size: 20rpx;
  background-color: #19be6b;
  color: #fff;
  border-radius: 80rpx;
}

.specialContent .specialContentTwo .specialContentTwoFlex .right .specialContentTwoImage {
  width: 155rpx;
  height: 155rpx;
}

.specialContent .specialContentThree {
  position: relative;
  display: flex;
  margin-top: 20rpx;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center
}

.specialContent .specialContentThree .specialContentThreeFlex {
  display: flex;
  padding: 20rpx 26rpx;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  flex: 0 0 auto;
  background-color: #f8f8f9;
  border-radius: 20rpx
}

.specialContent .specialContentThree .specialContentThreeFlex .specialContentThreeTop .specialContentThreeImage{
  width: 155rpx;
  height: 155rpx;
}

.specialContent .specialContentThree .specialContentThreeFlex .specialContentThreeMiddle {
  position: relative;
  bottom: 10rpx;
  font-size: 30rpx;
}

.specialContent .specialContentThree .specialContentThreeFlex .specialContentThreeBottom {
  padding: 6rpx 22rpx;
  font-size: 20rpx;
  background-color: #19be6b;
  color: #fff;
  border-radius: 80rpx;
}