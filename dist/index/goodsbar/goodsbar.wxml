<!-- 主页商品栏组件 -->
<!-- 头部 -->
<view style="position: relative; top: 80rpx; height: {{goodsNumber === 3? '560rpx' : '460rpx'}}">
  <view class="goodsbarHeader">
    <view class="goodsbarTitle" style="font-size: {{TitleFontSize}}rpx; color: {{TitleColor}}">{{Title}}</view>
    <view class="goodsbarSecondTitle" hidden="{{SecondTitleSign}}" style="margin-left: {{goodsbarSecondTitleMarginLeft}}rpx; margin-top: {{goodsbarSecondTitleMarginTop}}rpx; font-size: {{goodsbarSecondTitleFontSize}}rpx; color: {{goodsbarSecondTitleColor}}">{{SecondTitle}}</view>
    <view class="goodsbarTime">
      <van-count-down use-slot millisecond="{{millisecond}}" time="{{ time }}" bind:change="onChange" auto-start="{{autoStart}}">
        剩余
        <text class="item">{{ timeData.hours }}</text>
        <text>:</text>
        <text class="item">{{ timeData.minutes }}</text>
        <text>:</text>
        <text class="item">{{ timeData.seconds }}</text>
        <text wx:if="{{millisecond}}">:</text>
        <text class="item" wx:if="{{millisecond}}">{{ timeData.milliseconds }}</text>
      </van-count-down>
    </view>
    <view class="more">{{more}}</view>
  </view>
  <!-- 商品 -->
  <view class="Goodsbar">
    <view class="imgRow">
      <view wx:for="{{goodsNumber}}" wx:key="index" class="{{goodsNumber === 3? 'imgRowForThree' : 'imgRowFor'}}">
        <image class="goodImg" src="{{imgs[index]}}" mode="scaleToFill" lazy-load="true"></image>
        <image class="goodDiscountImg" src="{{disCountImg}}" mode="scaleToFill" lazy-load="true"></image>
        <view class="DiscountText">{{DiscountText[index]}}</view>
      </view>
    </view>
    <view class="{{goodsNumber === 3? 'TitleRowThree' : 'TitleRow'}}">
      <view class="TitleCol" wx:for="{{goodsNumber}}" wx:key="index">{{TitleText[index]}}</view>
    </view>
    <view class="{{goodsNumber === 3? 'priceTypeIconThree' : 'priceTypeIcon'}}">
      <view class="priceTypeIconItem" wx:for="{{goodsNumber}}" wx:key="index">
        <view class="priceTypeIconItemTitle" style="color: {{priceType[priceTypeSign].color}};border-color: {{priceType[priceTypeSign].color}}">{{priceType[priceTypeSign].title}}</view>
      </view>
    </view>
    <view class="{{goodsNumber === 3? 'priceRowThree' : 'priceRow'}}">
      <view class="priceRowChild" wx:for="{{goodsNumber}}" wx:key="index">
        <view class="priceColLeft">
          <view class="iconfont icon-money moneyIcon"></view>
          <view class="priceColLeftNew">{{priceColLeftNew[index]}}
            <text class="priceColLeftCompany">{{priceColLeftCompany[index]}}</text>
          </view>
        </view>
        <view class="priceColRight">
          <view class="priceColRightButton iconfont icon-gouwuche"></view>
        </view>
      </view>
    </view>
    <view class="{{goodsNumber === 3? 'priceRow2Three' : 'priceRow2'}}">
      <view class="priceColLeftOld" wx:for="{{goodsNumber}}" wx:key="index">{{priceColLeftOld[index]}}</view>
    </view>
  </view>
</view>