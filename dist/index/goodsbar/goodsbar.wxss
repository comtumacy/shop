/* 头部 */
@import "./moneyFont.wxss";
@import "./buyCarFont.wxss";

.goodsbarHeader {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.goodsbarHeader .goodsbarTitle {
  flex: none;
}

.goodsbarHeader .goodsbarSecondTitle {
  flex: none;
}

.goodsbarHeader .goodsbarTime {
  margin-right: 10rpx;
  flex: 1;
  text-align: right;
}

.goodsbarHeader .more {
  flex: none;
  font-size: 24rpx;
  color: rgb(128, 132, 143);
}

.goodsbarHeader .goodsbarTime van-count-down .van-count-down {
  font-size: 80rpx;
}

.goodsbarHeader .goodsbarTime van-count-down .item {
  display: inline-block;
  width: 28rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background-color: rgb(85, 101, 127);
  border-radius: 12rpx;
}

