/* 头部 */
@import "./moneyFont.wxss";
@import "./buyCarFont.wxss";

.goodsbarHeader {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}

.goodsbarHeader .goodsbarTitle {
  flex: none;
}

.goodsbarHeader .goodsbarSecondTitle {
  flex: none;
}

.goodsbarHeader .goodsbarTime {
  margin-right: 10rpx;
  flex: 1;
  text-align: right;
}

.goodsbarHeader .more {
  flex: none;
  font-size: 24rpx;
  color: rgb(128, 132, 143);
}

.goodsbarHeader .goodsbarTime van-count-down .van-count-down {
  font-size: 80rpx;
}

.goodsbarHeader .goodsbarTime van-count-down .item {
  display: inline-block;
  width: 28rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  background-color: rgb(85, 101, 127);
  border-radius: 12rpx;
}

/* 商品 */

.fourGoodsbar .imgRow {
  margin-top: 20rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.fourGoodsbar .imgRow .imgRowFor {
  height: 160rpx;
}

.fourGoodsbar .imgRow .imgRowFor .goodImg {
  width: 160rpx;
  height: 160rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.fourGoodsbar .imgRow .imgRowFor .goodDiscountImg {
  position: relative;
  bottom: 50rpx;
  width: 120rpx;
  height: 40rpx;
  border-bottom-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.fourGoodsbar .imgRow .imgRowFor .fourDiscountText {
  position: relative;
  left: 14rpx;
  bottom: 96rpx;
  font-family: SimHei;
  font-size: 24rpx;
  color: #fff;
}

.fourGoodsbar .TitleRow {
  position: relative;
  display: flex;
  top: 10rpx;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-start;
}

.fourGoodsbar .TitleRow .TitleCol {
  flex: 0 0 auto;
  width: 160rpx;
  font-size: 28rpx;
}

.fourGoodsbar .priceTypeIcon {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: flex-start;
}

.fourGoodsbar .priceTypeIcon .priceTypeIconItem {
  flex: 0 0 auto;
  width: 176rpx;
}

.fourGoodsbar .priceTypeIcon .priceTypeIconItem .priceTypeIconItemTitle {
  position: relative;
  top: 20rpx;
  width: 90rpx;
  text-align: center;
  font-size: 24rpx;
  border-width: 1rpx;
  border-style: solid;
  border-radius: 20rpx;
}

.fourGoodsbar .priceRow {
  position: relative;
  display: flex;
  top: 15px;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-start;
}

.fourGoodsbar .priceRow .priceRowChild{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-start;
  flex: 0 0 auto
}

.fourGoodsbar .priceRow .priceRowChild .priceColLeft {
  display: flex;
  align-items: flex-start;
  flex: 1 0 auto;
}

.fourGoodsbar .priceRow .priceRowChild .priceColLeft .moneyIcon {
  font-size: 18rpx
}

.fourGoodsbar .priceRow .priceRowChild .priceColLeft .priceColLeftNew {
  font-size: 30rpx
}

.fourGoodsbar .priceRow .priceRowChild .priceColLeft .priceColLeftOld {
  text-decoration: line-through;
  color: #80848F;
  font-size: 18rpx
}

.fourGoodsbar .priceRow .priceRowChild .priceColLeft .priceColLeftNew .priceColLeftCompany {
  position: relative;
  right: 8rpx;
  font-size: 18rpx;
}

.fourGoodsbar .priceRow .priceRowChild .priceColRight {
  flex: 0 0 auto
}

.fourGoodsbar .priceRow .priceRowChild .priceColRight {
  flex: 0 0 auto
}

