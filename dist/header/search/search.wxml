<view class="header">
  <image src="{{url}}" mode="scaleToFill"></image>
  <view class="select">
    <text class="address">{{city}}</text>
    <i-icon type="unfold" size="14" color="#80848f" i-class="i-iconLog"/>
  </view>
    <text class="addressLess">{{addressLess}}</text>
  <van-search value="{{ value }}" placeholder="{{placeholder}}" background="#ffffff" focus="true" shape="round" custom-class="search" field-class="search2" input-class="search3" bind:search="onSearch"/>
  <i-icon type="remind_fill" i-class="i-iconLog2" size="24"/>
  <i-badge dot i-class="i-badgeLog">
    <view class="demo-badge"></view>
  </i-badge>
</view>