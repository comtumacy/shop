@import "../../../font/allow.wxss";

.cartIndex {
  margin: 20rpx 0 0 0;
  padding: 0 4%;
}

.header {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center
}

.title {
  transform: scaleY(1.05)
}

.more {
  position: relative;
  display: flex;
  flex-flow: row nowrap;
}

.moreText, .moreIcon {
  color: #80848f
}

.moreText {
  font-size: 24rpx
}

.moreIcon {
  font-size: 20rpx;
  line-height: 32rpx
}

.cart {
  display: flex;
  flex-flow: row nowrap;
  overflow-x: auto;
  overflow-y: hidden
}

.content {
  display: inline-block;
  margin-right: 32rpx;
  height: 260rpx
}

.content image {
  margin-top: 20rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx
}

.text1, .text2 {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 150rpx;
  font-size: 24rpx;
  color: #80848f;
  text-align: center
}